# Environment configuration
LOG_LEVEL=INFO

# Resume configuration
RESUME_PATH=data/resume.json

# OpenRouter API configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
# LLM model - use free tier for local development, upgrade for production
# Free tier models (require :free suffix):
#   - google/gemini-flash-1.5-8b:free
#   - meta-llama/llama-3.2-3b-instruct:free
#   - qwen/qwen-2-7b-instruct:free
# Production: anthropic/claude-3.5-sonnet, openai/gpt-4o
LLM_MODEL=meta-llama/llama-3.2-3b-instruct:free
LLM_TIMEOUT=60.0

# Database configuration
DATABASE_URL=postgresql+asyncpg://chatbot:chatbot_dev_password@localhost:5432/resume_chatbot
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
